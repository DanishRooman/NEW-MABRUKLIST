@model IEnumerable<DataTransferObjects.Users.UserDto>

<div class="container-fluid">
    <div class="row">
        <div class="col-md-12">
            <table class="table table-bordered table-responsive table-hover table-striped" id="tblUserinfo">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.FirstName)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.User)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Email)
                        </th>
                        <th>
                            Actions
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.FirstName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.User)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Email)
                            </td>
                            <td>
                                <a href="javascript:void(0);" id="blockui_sample_2_2" title="Edit User" onclick="User.initEditUser(@item.Id);"><i class="fa fa-pencil" aria-hidden="true"></i></a> |
                                <a href="javascript:void(0);" title="Delete User" onclick="User.initDeleteUser(@item.Id);"><i class="fa fa-trash" aria-hidden="true"></i></a>
                            </td>

                        </tr>
                    }

                </tbody>
                <tfoot>


                </tfoot>
            </table>
        </div>
    </div>

</div>

<script type="text/javascript">
    $(document).ready(function () {
        $('#tblUserinfo').DataTable({
            aaSorting: []
        });
    });

</script>
