@model IEnumerable<DataTransferObjects.Roles.RolesDTO>



<table class="table table-bordered table-striped table-hover" id="tblRoles">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Roles)
            </th>
            <th>Action</th>
        </tr>

    </thead>

    <tbody>
        @foreach (var item in Model)
        {

            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Roles)
                </td>
                <td>

                    <a href="javascript:void(0);" title="Edit Roles" onclick="Neighbourhood.initEditNeighbourhood(@item.id);"><i class="fa fa-pencil" aria-hidden="true"></i></a> |
                    <a href="javascript:void(0);" title="Delete Roles" onclick="Roles.initDeleteRoles(@item.id);"><i class="fa fa-trash" aria-hidden="true"></i></a>
                    @*@Html.ActionLink("Edit", "Edit", new { id = item.id }) |
                        @Html.ActionLink("Details", "Details", new { id = item.id }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.id })*@
                </td>
            </tr>

        }


    </tbody>
</table>

<script type="text/javascript">
    $(document).ready(function () {
        $('#tblRoles').DataTable({
            aaSorting: []
        });
    });

</script>





