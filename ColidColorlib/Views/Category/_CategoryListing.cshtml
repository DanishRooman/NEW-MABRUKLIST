@model IEnumerable<DataTransferObjects.Category.CategoryDto>


<table class="table table-bordered table-hover table-striped" id="tblCategory">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Category)
            </th>
            <th>
                Actions
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Category)
                </td>
                <td>
                    <a href="javascript:void(0);" id="blockui_sample_2_2" title="Edit Category" onclick="Category.initEditCategory('@item.Id');"><i class="fa fa-pencil" aria-hidden="true"></i></a> | 
                    <a href="javascript:void(0);"  title="Delete Category" onclick="Category.initDeleteCategory('@item.Id');"><i class="fa fa-trash" aria-hidden="true"></i></a>
                </td>
            </tr>
        }
    </tbody>
</table>


<script type="text/javascript">
    $(document).ready(function () {
        $('#tblCategory').DataTable({
            aaSorting: []
        });
    });
</script>