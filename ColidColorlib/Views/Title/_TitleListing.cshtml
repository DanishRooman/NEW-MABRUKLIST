@model IEnumerable<DataTransferObjects.Title.TitleDTO>



<table class="table table-bordered table-striped table-hover" id="tblTitle">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            <th>Action</th>
        </tr>

    </thead>

    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>

                    <a href="javascript:void(0);" title="Edit Title" onclick="Title.initEditTitle(@item.id);"><i class="fa fa-pencil" aria-hidden="true"></i></a> |
                    <a href="javascript:void(0);" title="Delete Title" onclick="Title.initDeleteTitle(@item.id)"><i class="fa fa-trash" aria-hidden="true"></i></a>
                    @*@Html.ActionLink("Edit", "Edit", new { id=item.id }) |
        @Html.ActionLink("Details", "Details", new { id=item.id }) |
        @Html.ActionLink("Delete", "Delete", new { id=item.id })*@
                </td>
            </tr>
        }
    </tbody>
</table>

<script type="text/javascript">
    $(document).ready(function () {
        $('#tblTitle').DataTable();
    });

</script>






