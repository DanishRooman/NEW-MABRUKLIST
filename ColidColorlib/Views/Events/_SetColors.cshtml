
@Styles.Render("~/Contents/colorpicker")
@Scripts.Render("~/Script/colorpicker")


<div class="modal-dialog">
    <!-- Modal content-->
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal">&times;</button>
            <h4 class="modal-title">Select Colors</h4>
        </div>
        <div class="modal-body">
            <div class="row">
                <div class="col-md-12">
                    <div class="form-horizontal">
                        <div class="form-group">
                            <label class="control-label col-sm-3">Subject color</label>
                            <div class="col-sm-9">
                                <div id="divSubjectColor" class="input-group colorpicker-component colorSelector">
                                    <input type="text" id="txtSubjectColor" class="form-control" />
                                    <span class="input-group-addon"><i></i></span>
                                </div>

                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-sm-3">Font color</label>
                            <div class="col-sm-9">
                                <div id="divFontColor" class="input-group colorpicker-component colorSelector">
                                    <input type="text" id="txtFontColor" class="form-control" />
                                    <span class="input-group-addon"><i></i></span>

                                </div>

                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-primary" data-dismiss="modal" onclick="Event.initSaveColors()">Save</button>
            <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
        </div>
    </div>
</div>

<script type="text/javascript">
    $(function () {
        $('#divFontColor').colorpicker({
            color: '@ViewBag.fontcolor',
            destroy: true,
            format: 'rgba'
        });

        $('#divSubjectColor').colorpicker({
            color: '@ViewBag.subjectcolor',
            destroy: true,
            format: 'rgba'
        });
    });
</script>